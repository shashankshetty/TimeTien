<% title "manage groups" %>

<div class="right"><%= link_to 'add new group', new_group_path %></div><br/>

<table id="groups" class="tablesorter">
  <thead>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th></th>
  </tr>
  </thead>
  <% @groups.each do |group| %>
      <tr>
        <td align="center"><%= group.name %></td>
        <td align="center"><%= group.description %></td>
        <td align="center"><%= link_to '', edit_group_path(group), :class => "edit_short" %></td>
      </tr>
  <% end %>
</table>