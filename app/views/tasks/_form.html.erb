<%= render "shared/messages", :target => @task %>
<div class="field">
  <%= label_tag :start_time %>
  <br/>
  <%= text_field_tag :start_time, format_time_m_d_y(@task.start_time), :class => "datetime", :name => "task[start_time]" %>
</div><br/>
<div class="field">
  <%= label_tag :end_time %>
  <br/>
  <%= text_field_tag :end_time, format_time_m_d_y(@task.end_time), :class => "datetime", :name => "task[end_time]" %>
</div><br/>
<div class="field">
  <%= label_tag :task_name %>
  <br/>
  <%= select_tag :tag_id, options_for_select(available_tags, @task.tag_id), :name => "task[tag_id]" %>
</div><br/>
<div class="field">
  <%= label_tag "Time Out" %>
  <span> (HH:MM)</span>
  <a class="title" rel="popover" href="#" data-original-title="Break/Time out in (HH:MM)" data-content="Total break time between a task">
    <%= image_tag("info.png", :size => "16x16", :alt => "info") %></a><br/>
  <%= text_field_tag :hours, get_time_out_hours, :class => 'time' %>
  : <%= text_field_tag :minutes, get_time_out_minutes, :class => 'time' %>
</div><br/>

