<% title "manage tasks" %>
<div class="right"><%= link_to 'add new task', new_tag_path %></div><br/>

<table id="tags" class="tablesorter">
  <thead>
  <tr>
    <th>Name</th>
    <th>Project</th>
    <th>Goal</th>
    <th>Time Logged</th>
    <th>Billable Amount</th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  <% @tags.each do |tag| %>
      <tr>
        <td align="center"><%= tag.name %></td>
        <td align="center"><%= tag.project.nil? ? "" : tag.project.name %></td>
        <td align="center"><%= time_allocated(tag) %></td>
        <td align="center"><%= display_time(tag.total_time_taken) %></td>
        <td align="center"><%= number_to_currency(tag.billable_amount, :unit => tag.pay_currency) %></td>
        <td align="center"><%= link_to '', edit_tag_path(tag), :class => "edit_short" %></td>
      </tr>
  <% end %>
  </tbody>
</table>


