<% title "manage tags" %>
<%= javascript_include_tag "tags" %>
<div class="right"><%= link_to 'add new tag', new_tag_path %></div><br/>

<table id="tags" class="tablesorter">
  <thead>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Group</th>
    <th>Goal</th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  <% @tags.each do |tag| %>
      <tr>
        <td align="center"><%= tag.name %></td>
        <td align="center"><%= truncate(tag.description) %></td>
        <td align="center"><%= tag.group.nil? ? "" : tag.group.name %></td>
        <td align="center"><%= time_allocated(tag) %></td>
        <td align="center"><%= link_to '', edit_tag_path(tag), :class => "edit_short" %></td>
      </tr>
  <% end %>
  </tbody>
</table>


