<%= javascript_include_tag "tags" %>
<%= form_for(@tag) do |f| %>
    <%= render "shared/messages", :target => @tag %>
    <div class="field">
      <%= f.label :name %>
      <br/>
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label :description %>
      <br/>
      <%= f.text_area :description, :rows => 1 %>
    </div>
    <div class="field">
      <%= f.label :time_allocated %><span> (HH:MM)</span>
      <br/>
      <%= text_field_tag :hours, get_hours, :class => 'time' %> : <%= text_field_tag :minutes, get_minutes, :class => 'time' %> /
      <%= f.collection_select(:frequency, task_frequencies, :first, :last, :include_blank => "Select") %>
    </div><br/>
    <div class="field">
      <%= f.label :group_id %>
      <br/>
      <%= f.collection_select(:group_id, current_user.groups, :id, :name, :include_blank => "Select") %>
    </div><br/>
    <div class="actions">
      <%= f.submit :class => "button" %>
    </div>
<% end %>
