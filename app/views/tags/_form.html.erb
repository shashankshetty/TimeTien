<%= javascript_include_tag "tags" %>
<%= form_for(@tag) do |f| %>
    <%= render "shared/messages", :target => @tag %>
    <div class="field">
      <%= f.label :name %>
      <br/>
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label :description %>
      <br/>
      <%= f.text_area :description, :rows => 1 %>
    </div>
    <div class="field">
      <%= f.label :time_allocated %><span> (HH:MM)</span>
      <a class="title" href="#" title="Typical time to complete the task|Set a target to complete a task to measure how you are doing? ">
        <%=  image_tag("info.png", :size => "16x16", :alt => "facebook") %></a><br />
      <%= text_field_tag :hours, get_hours, :class => 'time' %> : <%= text_field_tag :minutes, get_minutes, :class => 'time' %> /
      <%= f.collection_select(:frequency, task_frequencies, :first, :last) %>
    </div>
    <div class="field">
      <%= f.label :pay_rate %>
      <a class="title" href="#" title="Pay Rate|Pay rate per hour">
        <%=  image_tag("info.png", :size => "16x16", :alt => "facebook") %></a><br />
      <%= f.collection_select(:pay_currency, currencies, :first, :last) %> <%= f.text_field :pay_rate, :class => "amount", :maxlength => 7 %> /hour
    </div>
    <div class="field">
      <%= f.check_box :complete_within %><%= label_tag "Check if your goal is to complete the task within the allocated time" %>
    </div>
    <div class="field">
      <%= f.label :group_id %>
      <br/>
      <%= f.collection_select(:group_id, current_user.groups, :id, :name, :include_blank => "Select") %>
    </div><br/>
    <div class="actions">
      <%= f.submit :class => "button" %>
    </div>
<% end %>
